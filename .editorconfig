# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.js]
indent_style = space
indent_size = 2

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# Match Markdown files
[*.md]
trim_trailing_whitespace = false